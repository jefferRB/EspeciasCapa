<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <!-- AdminLTE y FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

    <style>
        .nav-link.active {
            background-color: #FFFFFF !important;
            color: #ffffff !important;
        }

        .main-sidebar .nav-sidebar .nav-link:hover {
            background-color: #64d869 !important;
            color: #ffffff !important;
        }

            .main-sidebar .nav-sidebar .nav-link:hover i,
            .main-sidebar .nav-sidebar .nav-link:hover p {
                color: #ffffff !important;
            }

        .content-wrapper, .main-footer {
            margin-left: 250px;
        }

        .main-footer {
            background-color: #64d869;
            padding: 1rem;
            color: #fff;
        }

        .main-sidebar {
            background-color: #64d869 !important;
        }

        .brand-link {
            background-color: #64d869 !important;
            color: #ffffff !important;
        }

            .brand-link span {
                color: #ffffff !important;
            }

        /* Cambios para los iconos y el texto en blanco */
        .nav-link {
            color: #ffffff !important;
        }

            .nav-link i {
                color: #ffffff !important;
            }

        .main-footer {
            background-color: #64d869;
            padding: 1rem;
            color: #fff;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-controller="Login" asp-action="Index" class="nav-link">Login</a>
                </li>
            </ul>
        </nav>

        <!-- Sidebar -->
        <aside class="main-sidebar elevation-4">
            <a href="#" class="brand-link">
                <span class="brand-text font-weight-light">Especies Sarapiqui</span>
            </a>

            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li class="nav-item">
                            <a href="/Inventario" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>Inventario</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Cliente" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Clientes</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Proveedor" class="nav-link">
                                <i class="nav-icon fas fa-truck"></i>
                                <p>Proveedores</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Contabilidad" class="nav-link">
                                <i class="nav-icon fas fa-file-invoice-dollar"></i>
                                <p>Contabilidad</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Reportes" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i>
                                <p>Ventas</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Productos" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>Productos</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Administrativo" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>Administrativo</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Productos" class="nav-link">
                                <i class="nav-icon fas fa-cogs"></i>
                                <p>Reportes</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

        <!-- Footer -->
        <footer class="main-footer">
            <strong>&copy; 2025 <a href="#" style="color: #ffffff;">Especias Sarapiqui</a>.</strong>
            Todos los derechos reservados.
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>
</body>
</html>
