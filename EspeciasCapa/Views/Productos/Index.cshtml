@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css" rel="stylesheet">


    <style>
        .content-wrapper, .main-footer {
            margin-left: 250px;
        }

        .main-footer {
            background-color: #64d869;
            padding: 1rem;
            color: #fff;
        }

        .main-sidebar {
            background-color: #64d869 !important;
        }

        .brand-link {
            background-color: #64d869 !important;
            color: #ffffff !important;
        }

            .brand-link span {
                color: #ffffff !important;
            }

        .table th, .table td {
            vertical-align: middle;
        }

        .nav-link {
            color: #ffffff !important;
        }

            .nav-link i {
                color: #ffffff !important;
            }

        .main-header {
            padding-top: 1rem;
        }

        .section-card {
            background-color: #ffffff;
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
        }

            .section-card h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
                color: #e0e1df;
            }

        .btn {
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 1rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <h2>Productos</h2>
                </div>
            </div>

            <div class="section-card">
                <div class="mb-3">
                    <a href="@Url.Action("Crear", "Producto")" class="btn btn-success"><i class="fas fa-plus-circle"></i> Crear Producto</a>
                </div>
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Producto</th>
                            <th>Descripción</th>
                            <th>Precio por unidad</th>
                            <th>Fecha de Vencimiento</th>
                            <th>Proveedor</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Chía</td>
                            <td>Semillas de chía orgánica, rica en omega-3.</td>
                            <td>$5.00</td>
                            <td>10/12/2025</td>
                            <td>Masxmenos</td>
                            <td>
                                <a href="@Url.Action("Editar", "Producto", new { id = 1 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="@Url.Action("Eliminar", "Producto", new { id = 1 })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este producto?');">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Avena</td>
                            <td>Avena integral, ideal para desayuno y batidos.</td>
                            <td>$3.00</td>
                            <td>25/05/2025</td>
                            <td>Megasuper</td>
                            <td>
                                <a href="@Url.Action("Editar", "Producto", new { id = 2 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="@Url.Action("Eliminar", "Producto", new { id = 2 })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este producto?');">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>Semillas de Girasol</td>
                            <td>Semillas de girasol tostadas, fuente de proteínas.</td>
                            <td>$4.00</td>
                            <td>30/06/2025</td>
                            <td>Masxmenos</td>
                            <td>
                                <a href="@Url.Action("Editar", "Producto", new { id = 3 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                                <a href="@Url.Action("Eliminar", "Producto", new { id = 3 })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar este producto?');">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>


            </div>



        </div>

        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>
</body>
</html>
