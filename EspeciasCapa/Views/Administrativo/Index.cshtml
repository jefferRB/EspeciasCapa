@{
    ViewData["Title"] = "Administrativo";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />


    <style>
        .content-wrapper, .main-footer {
            margin-left: 250px;
        }

        .main-footer {
            background-color: #64d869;
            padding: 1rem;
            color: #fff;
        }

        .main-sidebar {
            background-color: #64d869 !important;
        }

        .brand-link {
            background-color: #64d869 !important;
            color: #ffffff !important;
        }

            .brand-link span {
                color: #ffffff !important;
            }

        .table th, .table td {
            vertical-align: middle;
        }

        .nav-link {
            color: #ffffff !important;
        }

            .nav-link i {
                color: #ffffff !important;
            }

        .main-header {
            padding-top: 1rem;
        }

        .section-card {
            background-color: #ffffff;
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
        }

            .section-card h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
                color: #e0e1df;
            }

        .btn {
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 1rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">


        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <h2>Administrativo</h2>
                </div>
            </div>
                <div class="section-card">
                    <h3>Visualización de Usuarios</h3>
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Rol</th>
                                <th>Correo</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Juan Pérez</td>
                                <td>Admin</td>
                                <td>juan.perez@correo.com</td>
                            </tr>
                            <tr>
                                <td>Maria Gómez</td>
                                <td>Empleado</td>
                                <td>maria.gomez@correo.com</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="section-card">
                    <h3>Pago de Planillas</h3>
                    <a href="/PagoPlanillas" class="btn btn-success">
                        <i class="fas fa-money-check-alt"></i> Realizar Pago
                    </a>
                </div>

                <div class="section-card">
                    <h3>Solicitud de Vacaciones</h3>
                    <a href="/SolicitudVacaciones" class="btn btn-primary">
                        <i class="fas fa-calendar-alt"></i> Solicitar Vacaciones
                    </a>
                </div>

                <div class="section-card">
                    <h3>Lista de Empleados</h3>
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Cargo</th>
                                <th>Fecha de Ingreso</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Carlos Sánchez</td>
                                <td>Vendedor</td>
                                <td>01/06/2022</td>
                            </tr>
                            <tr>
                                <td>Laura Ruiz</td>
                                <td>Soporte</td>
                                <td>15/08/2021</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
    

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>
</body>
</html>
