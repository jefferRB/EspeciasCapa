@{
    ViewData["Title"] = "Contabilidad";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css" rel="stylesheet">

  
    <style>
        .content-wrapper, .main-footer {
            margin-left: 250px;
        }

        .main-footer {
            background-color: #64d869;
            padding: 1rem;
            color: #fff;
        }

        .main-sidebar {
            background-color: #64d869 !important;
        }

        .brand-link {
            background-color: #64d869 !important;
            color: #ffffff !important;
        }

            .brand-link span {
                color: #ffffff !important;
            }

        .table th, .table td {
            vertical-align: middle;
        }

        .nav-link {
            color: #ffffff !important;
        }

            .nav-link i {
                color: #ffffff !important;
            }

        .main-header {
            padding-top: 1rem;
        }

        .section-card {
            background-color: #ffffff;
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
        }

            .section-card h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
                color: #333;
            }

        .btn {
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 1rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <h2>Contabilidad</h2>
                </div>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="mb-3">
                        <a href="@Url.Action("Crear", "Contabilidad")" class="btn btn-success"><i class="fas fa-plus-circle"></i> Crear Contabilidad</a>
                    </div>

                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Descripción</th>
                                <th>Monto</th>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Acciones</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Monto</td>
                                    <td>@item.Fecha</td>
                                    <td>@item.Tipo</td>
                                    
                                    <td>
                                        <a href="@Url.Action("Editar", "Contabilidad", new { id = item.Id })" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a href="@Url.Action("Eliminar", "Contabilidad", new { id = item.Id })" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de eliminar esta contabilidad?');">
                                            <i class="fas fa-trash-alt"></i> Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>
</body>
</html>
