@{
    Layout = "_Layout";
    ViewData["Title"] = "Perfil de Usuario";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    <style>
        .content-wrapper, .main-footer {
            margin-left: 250px;
        }

        .main-footer {
            background-color: #64d869;
            padding: 1rem;
            color: #fff;
        }

        .main-sidebar {
            background-color: #64d869 !important;
        }

        .brand-link {
            background-color: #64d869 !important;
            color: #ffffff !important;
        }

        .section-card {
            background-color: #ffffff;
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
        }

            .section-card h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
                color: #333;
            }

        .table th, .table td {
            vertical-align: middle;
        }

        .btn {
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 1rem;
        }
    </style>
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <h2>Perfil de Usuario</h2>
                </div>
            </div>

            <div class="section-card">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Dato solicitado</th>
                            <th>Dato del usuario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Nombre</td>
                            <td>Juan Pérez</td>
                            <td>
                                <a href="@Url.Action("Editar", "Usuario", new { id = 1 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>Correo Electrónico</td>
                            <td>juan.perez@example.com</td>
                            <td>
                                <a href="@Url.Action("Editar", "Usuario", new { id = 1 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>Teléfono</td>
                            <td>+1 234 567 8901</td>
                            <td>
                                <a href="@Url.Action("Editar", "Usuario", new { id = 1 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>Dirección</td>
                            <td>Calle 123, Ciudad, País</td>
                            <td>
                                <a href="@Url.Action("Editar", "Usuario", new { id = 1 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>Fecha de Nacimiento</td>
                            <td>01/01/1990</td>
                            <td>
                                <a href="@Url.Action("Editar", "Usuario", new { id = 1 })" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>
</body>
</html>

