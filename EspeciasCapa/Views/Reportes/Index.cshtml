@{
    ViewData["Title"] = "Reportes";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Mi Aplicación</title>

    <link href="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/css/adminlte.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

    <style>
        .content-wrapper, .main-footer {
            margin-left: 250px;
        }

        .main-footer {
            background-color: #64d869;
            padding: 1rem;
            color: #fff;
        }

        .main-sidebar {
            background-color: #64d869 !important;
        }

        .brand-link {
            background-color: #64d869 !important;
            color: #ffffff !important;
        }

            .brand-link span {
                color: #ffffff !important;
            }

        .table th, .table td {
            vertical-align: middle;
        }

        .nav-link {
            color: #ffffff !important;
        }

            .nav-link i {
                color: #ffffff !important;
            }

        .main-header {
            padding-top: 1rem;
        }

        .section-card {
            background-color: #ffffff;
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 20px;
            margin-bottom: 20px;
        }

            .section-card h3 {
                font-size: 1.5rem;
                margin-bottom: 15px;
                color: #e0e1df;
            }

        .btn {
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 1rem;
        }
    </style>

</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <h2>Reportes</h2>
                </div>
            </div>

            <div class="section-card" style="background-color: #ffffff; border-radius: 8px; padding: 20px; border: 1px solid #ddd;">
                <div class="mb-3">
                    <a href="#" class="btn btn-success"><i class="fas fa-plus-circle"></i> Crear Reporte</a>
                    <a href="#" class="btn btn-primary"><i class="fas fa-search"></i> Búsqueda de Reportes</a>
                    <a href="#" class="btn btn-info"><i class="fas fa-file-export"></i> Generar Reportes (CSV o PDF)</a>
                </div>

                <div class="content">
                    <div class="container-fluid">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Detalle del reporte</th>
                                    <th>Fecha de emisión</th>
                                    <th>Periodo</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Reporte de empleados</td>
                                    <td>08/04/2025</td>
                                    <td>
                                        <input type="date" class="form-control d-inline w-45" value="2025-04-01" />
                                        <span> a </span>
                                        <input type="date" class="form-control d-inline w-45" value="2025-04-08" />
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-file-pdf"></i> PDF</a>
                                        <a href="#" class="btn btn-success btn-sm"><i class="fas fa-file-excel"></i> Excel</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Reporte de contabilidad</td>
                                    <td>07/04/2025</td>
                                    <td>
                                        <input type="date" class="form-control d-inline w-45" value="2025-03-01" />
                                        <span> a </span>
                                        <input type="date" class="form-control d-inline w-45" value="2025-03-31" />
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-danger btn-sm"><i class="fas fa-file-pdf"></i> PDF</a>
                                        <a href="#" class="btn btn-success btn-sm"><i class="fas fa-file-excel"></i> Excel</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1.0/dist/js/adminlte.min.js"></script>

    <style>
        .w-45 {
            width: 45%;
            display: inline-block;
        }
    </style>
</body>

</html>
